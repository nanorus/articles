<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/Theme.ActionBar.Custom</item>
    </style>

    <!-- Articles list -->
    <style name="ArticleTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="ArticleListError">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ArticleDescription">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ArticleDate">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ActionBar -->
    <style name="Theme.ActionBar.Custom" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/Theme.ActionBar.Custom.TitleTextStyle</item>
    </style>

    <style name="Theme.ActionBar.Custom.TitleTextStyle" parent="">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>